extends layout

block links
	// Plugin specific styles
	link(href='css/plugins/dc.css', rel='stylesheet', type='text/css')
	link(href='css/plugins/c3.min.css', rel='stylesheet', type='text/css')

	// Page specific styles
	link(href='css/example.css', rel='stylesheet', type='text/css')

block content
	// Main content
	section.content
		// CrossCompare
		.row
			.col-xs-12
				.box.box-danger.hidden
					.box-header.with-border
						h3.box-title CrossCompare
						.box-tools.pull-right
							button.btn.btn-box-tool#resetCrossCompare
								i.fa.fa-times
					.box-body
						#crosscompare

		// Airport and Compare (Header)
		.row
			// Airport Select
			.col-md-12.col-sm-12.col-xs-12
				h1
					strong Airport 
					select.form-control#airportSelect
						option(value='ALL') show all
						option(value='ATL') Atlanta (ATL)
						option(value='ORD') Chicago (ORD) 
						option(value='JFK') New York (JFK)
					|  
					span.hidden-xs#resetAll

		// Movement, date, and KPIs
		.row
			// Movements by Date
			.col-md-8.col-sm-12.col-xs-12#8-12-12-width
				.box.box-primary
					.box-header.with-border
						h3.box-title Number of Flights 
							small (per hour)
						.box-tools.pull-right
							button.btn.btn-box-tool.openCross#crossMovementsChart
								i.fa.fa-bar-chart
					.box-body.loading-height-main
						#movementsChart
						.no-y-axis#movementsTimeChart
					+loading

			// Total Flights
			.col-md-4.col-sm-6.col-xs-12
				.info-box
					span.info-box-icon.bg-blue
						i.fa.fa-plane
					|								 
					.info-box-content
						span.info-box-text Total Flights
						|									 
						span.info-box-number#flights 
						+loading

			// Average Delay
			.col-md-4.col-sm-6.col-xs-12
				.info-box
						span.info-box-icon.bg-blue
							i.fa.fa-clock-o
						|								 
						.info-box-content
							span.info-box-text Mean Delay
							|									 
							span.info-box-number
								#delay 
								|  minutes
							+loading

			// Weekday Average Delay
			.col-md-4.col-sm-12.col-xs-12#4-12-12-width
				.box.box-primary
					.box-header.with-border
						h3.box-title Mean Delay 
							small (min)
						.box-tools.pull-right
							button.btn.btn-box-tool.openCross#crossWeekdayChart
								i.fa.fa-bar-chart
					.box-body.loading-height-side
						#weekdayChart
					+loading

		// Time of Day, Delay, and Distance
		.row
			// Time of Day
			.col-md-4.col-sm-4.col-xs-12#4-4-12-width
				.box.box-primary
					.box-header.with-border
						h3.box-title Time of Day
						.box-tools.pull-right
							button.btn.btn-box-tool.openCross#crossTodChart
								i.fa.fa-bar-chart
					.box-body.loading-height-side
						.no-y-axis#todChart
					+loading

			// Delay
			.col-md-4.col-sm-4.col-xs-12
				.box.box-primary
					.box-header.with-border
						h3.box-title Delay Length 
							small (min)
						.box-tools.pull-right
							button.btn.btn-box-tool.openCross#crossDelayChart
								i.fa.fa-bar-chart
					.box-body.loading-height-side
						.no-y-axis#delayChart
					+loading

			// Distance
			.col-md-4.col-sm-4.col-xs-12
				.box.box-primary
					.box-header.with-border
						h3.box-title Flight Distance 
							small (mi.)
						.box-tools.pull-right
							button.btn.btn-box-tool.openCross#crossDistanceChart
								i.fa.fa-bar-chart
					.box-body.loading-height-side
						.no-y-axis#distanceChart
					+loading

		// Average Delay by Airline
		.row
			.col-xs-12#12-width
				.box.box-primary
					.box-header.with-border
						h3.box-title Average Delay by Airline 
							small (radius: number of flights, colour: mean delay)
						.box-tools.pull-right
							button.btn.btn-box-tool.openCross#crossAirlineDelayChart
								i.fa.fa-bar-chart
					.box-body.loading-height-side.no-bottom-padding
						#airlineDelayChart
					+loading

		// Flight Table (hidden on XS)
		.row
			.col-md-12.hidden-xs
				.box.box-default
					.box-header.with-border
						h3.box-title Latest Flights
						.box-tools.pull-right
							button.btn.btn-box-tool(data-widget="collapse")
								i.fa.fa-minus
					.box-body.loading-height-side
						table.table.table-bordered.table-hover#flightsTable
					+loading

block scripts
	// Page specific plugins
	script(src='js/plugins/d3.min.js', type='text/javascript')
	script(src='js/plugins/crossfilter.min.js', type='text/javascript')
	script(src='js/plugins/dc.min.js', type='text/javascript')
	script(src='js/plugins/c3.min.js', type='text/javascript')
	//script(src='js/plugins/jquery-ui.min.js', type='text/javascript')

	// Page specific logic
	script(src='js/example.js', type='text/javascript')
	script(src='js/crosscompare.js', type='text/javascript')

mixin loading
	// Loading overlay and icon
	.overlay.loading
		i.fa.fa-refresh.fa-spin